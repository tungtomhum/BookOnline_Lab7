

@using SachOnline.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SachOnline.Models.DONDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center; padding: 20px 0px;">DANH SÁCH ĐƠN ĐẶT HÀNG</h2>

<table class="table">
    <tr>
        <th style="text-align: center;">
            <label class="control-label" style="width:100px;">Mã đơn hàng</label>
        </th>
        <th style="text-align: center;">
            <label class="control-label" style="width:110px;">Mã khách hàng</label>
        </th>
        <th style="text-align: center;">
            <label class="control-label" style="width:100px;">Ngày đặt</label>
        </th>
        <th style="text-align: center;">
            <label class="control-label" style="width:150px;">Ngày giao</label>
        </th>
        <th style="text-align: center;">
            <label class="control-label" style="width:100px;">Đã thanh toán</label>
        </th>
        <th style="text-align: center;">
            <label class="control-label" style="width:100px;">Tình trạng giao hàng</label>
        </th>
        <th style="width: 200px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.MaDonHang)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaThanhToan)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.TinhTrangGiaoHang)
            </td>

            <td>

                <a href="@Url.Action("Edit", new { id = item.MaDonHang })" class="btn btn-warning" role="button">Sửa</a>

                <a href="@Url.Action("Details", new { id = item.MaDonHang })" class="btn btn-primary" role="button">Chi tiết</a>

                <a href="@Url.Action("Delete", new { id = item.MaDonHang })" class="btn btn-danger" role="button">Xóa</a>

            </td>
        </tr>
    }

</table>
@*Tạo liên kết phần trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 :
Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

